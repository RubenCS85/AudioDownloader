# AudioDL environment variables example
# Copy this file to `.env` and adjust values as needed.

# -------------------------
# Paths
# -------------------------

# Base download directory
AUDIODL_DOWNLOAD_DIR=~/Downloads/AudioDL

# Temporary directory (optional)
# AUDIODL_TMP_DIR=/tmp/audiodl

# -------------------------
# External tools
# -------------------------

# Path to yt-dlp binary (if not in PATH)
# AUDIODL_YT_DLP_PATH=yt-dlp

# Path to ffmpeg binary
# AUDIODL_FFMPEG_PATH=/usr/bin/ffmpeg

# Cookies file (useful for age-restricted or private content)
# AUDIODL_COOKIES_PATH=/path/to/cookies.txt

# -------------------------
# Audio defaults
# -------------------------

# Default audio format
AUDIODL_AUDIO_FORMAT=mp3

# Default audio quality (mp3 V0)
AUDIODL_AUDIO_QUALITY=0

# -------------------------
# Behaviour
# -------------------------

# Overwrite existing files: true / false
AUDIODL_OVERWRITE=false

# -------------------------
# Logging
# -------------------------

# DEBUG | INFO | WARNING | ERROR
AUDIODL_LOG_LEVEL=INFO

# -------------------------
# Future providers (placeholders)
# -------------------------

# Spotify
# AUDIODL_SPOTIFY_CLIENT_ID=
# AUDIODL_SPOTIFY_CLIENT_SECRET=

# Apple Music
# AUDIODL_APPLE_MUSIC_DEVELOPER_TOKEN=
